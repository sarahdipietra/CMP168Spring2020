	                boolean isGraduateCourse = false;
	                int courseNum = 0;
	                String courseDept = "";
	                int numCredits = 0;

	                for (int i = 0; i < 2; i++) {
	                    if (i == 0) {
	                        System.out.println("First course:");
	                    }
	                    if (i == 1) {
	                        System.out.println("Second course:");
	                    }
	                    if (i == 2) {
