	                Faculty teacher = new Faculty();
	                while (fail == 'y') {
	                    for (int i = 0; i < numOfFaculty; i++) {
	                        if (faculty[i].getEmployeeID() == facultyID) {
	                        	teacher = faculty[i];
	                            fail = 'n';
	                        }
	                    }
	                    if (fail =='y') {
	                        System.out.println("Invalid ID. Enter the ID of the faculty teaching these courses:");
	                        facultyID = scnr.nextInt();
	                    }
	                }
	                teacher.addCoursesTaught(newCourses);
	                for (int i = 0; i < numOfFaculty; i++) {
	                    System.out.println(faculty[i].toString());
	                }
